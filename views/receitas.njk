{% extends 'template.njk' %}

  {% block head %}
     <title>Foodfy - Receitas</title>
  {% endblock %}

{% block content %}
<section class="main"> <!--Start Main-->
  <div class="main-title">
    <h2>Receitas</h2>
  </div>

  <div class="cards">
{% for item in items %}
    <div class="card" id={{item.id}}>
      <img src={{item.image}}>
      <div class="card-title">
        <h4>{{item.title}}</h4>
        <p>por {{item.author}}</p>
      </div>
    </div>
  {% endfor %}
   </div>
</section> <!--End Main-->
<footer class="footer">
  <p>Todos direitos reservados, receitas Foodfy.</p>
</footer>
{% endblock %}