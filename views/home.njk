{% extends 'template.njk' %}

  {% block head %}
     <title>Foodfy - Home</title>
  {% endblock %}

{% block content %}
    <section class="top-container"> <!--Start top container-->
      <div class="wrapper">
        <div class="text-container">
          <h2>As melhores receitas</h2>
          <p>Aprenda a construir os melhores pratos<br>
            com receitas criadas por profissionais<br>
            do mundo inteiro.</p>
        </div>
      <div class="container-image">
        <img src="chef.png" alt="Chef" title="Chef">
      </div>
    </div>
    </section><!--End top container-->
</header> <!--End Header-->

<section class="main"> <!--Start Main-->
  <div class="main-title">
    <h2>Mais acessadas</h2>
  </div>

  <div class="cards">
  {% for item in items %}
    <div class="card" id={{item.id}}>
      <img src={{item.image}}>
      <div class="card-title">
        <h4>{{item.title}}</h4>
        <p>por {{item.author}}</p>
      </div>
    </div>
  {% endfor %}
  </div>
</section> <!--End Main-->
<footer class="footer">
  <p>Todos direitos reservados, receitas Foodfy.</p>
</footer>

{% endblock %}
